@addTagHelper *, Microsoft.AspNetCore.Mvc.*
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner-wrap">
    <section class="breadcrumb-wrap">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ol class="breadcrumb mrt-10">
                        <li><a href="gioithieu.html">Về Vietbank</a></li>
                        <li class="active"><span>Giới thiệu</span></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="banner-page imageBanner">
        <div style="background-image:url('/img/banner_page/banner_gioithieu.png')" class="imgBg"></div>
        <div class="desc">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-5 col-lg-5 col-xl-5">
                        <h1 class="title">Giới thiệu</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<main>
    <section class="about-us">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="item-ab">
                        <div class="row flex flex-wrap">
                            <div class="col-xs-12 col-md-5 col-lg-4">
                                <div class="thumb"><img src="/img/gioithieu/thungo.png" alt="Thu ngo"></div>
                            </div>
                            <div class="col-xs-12 col-md-7 col-lg-8">
                                <div class="content">
                                    <h1 class="title">Thư ngỏ của Chủ tịch Hội Đồng Quản Trị</h1>
                                    <div class="desc">Chào mừng Quý vị đến với Ngân hàng Việt Nam Thương Tín (Vietbank). Chúng tôi xin chân thành cảm ơn sự hợp tác của Quý vị trong thời gian qua cũng như sự quan tâm đến những triển vọng hợp tác cùng Vietbank trong thời gian sắp tới.</div><a href="thungo.html" class="btn-more">Xem thêm...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item-ab">
                        <div class="row flex flex-wrap">
                            <div class="col-xs-12 col-md-7 col-lg-8">
                                <div class="content">
                                    <h1 class="title">Quá trình phát triển</h1>
                                    <div class="desc">Hiện nay, Vietbank đã có 96 điểm giao dịch tại khắp các vùng kinh tế trọng điểm trên toàn quốc. Đây là minh chứng cho sự phát triển nhanh, an toàn và bền vững của Vietbank trong bối cảnh hiện nay.</div><a href="quatrinhphattrien.html" class="btn-more">Xem thêm...</a>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-5 col-lg-4">
                                <div class="thumb"><img src="/img/gioithieu/quatrinhphattrien.png" alt="Qua trinh phat trien"></div>
                            </div>
                        </div>
                    </div>
                    <div class="item-ab">
                        <div class="row flex flex-wrap">
                            <div class="col-xs-12 col-md-5 col-lg-4">
                                <div class="thumb"><img src="/img/gioithieu/tamnhin-sumenh.png" alt="Tam nhin su menh"></div>
                            </div>
                            <div class="col-xs-12 col-md-7 col-lg-8">
                                <div class="content">
                                    <h1 class="title">Tầm nhìn - Sứ mệnh, Giá trị cốt lõi</h1>
                                    <div class="desc">Năng động, hiện đại, giàu kinh nghiệm và nhiệt tình.</div><a href="tamnhin-sumenh.html" class="btn-more">Xem thêm...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item-ab">
                        <div class="row flex flex-wrap">
                            <div class="col-xs-12 col-md-7 col-lg-8">
                                <div class="content">
                                    <h1 class="title">Chính sách chất lượng</h1>
                                    <div class="desc">Vietbank không ngừng phát triển và hoàn thiện trong từng hoạt động, hướng đến phục vụ khách hàng với chất lượng tốt nhất.</div><a href="camket.html" class="btn-more">Xem thêm...</a>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-5 col-lg-4">
                                <div class="thumb"><img src="/img/gioithieu/chinhsachchatluong.png" alt="Chinh sach chat luong"></div>
                            </div>
                        </div>
                    </div>
                    <div class="item-ab">
                        <div class="row flex flex-wrap">
                            <div class="col-xs-12 col-md-5 col-lg-4">
                                <div class="thumb"><img src="/img/gioithieu/dinhhuongphattrien.png" alt="Dinh huong phat trien"></div>
                            </div>
                            <div class="col-xs-12 col-md-7 col-lg-8">
                                <div class="content">
                                    <h1 class="title">Định hướng phát triển</h1>
                                    <div class="desc">Xây dựng Vietbank trở thành ngân hàng bán lẻ đa năng, hiện đại, phù hợp với các chuẩn mực quốc tế, đủ khả năng để hội nhập và phát triển trong giai đoạn mới.</div><a href="camket.html" class="btn-more">Xem thêm...</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
