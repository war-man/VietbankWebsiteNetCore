@model VietbankWebsite.ModelMap.IncentivesCateThreeDto
@{
    ViewData["Title"] = "HappyDay";
    Layout = "~/Views/Shared/_LayoutCard.cshtml";
}

<section class="breadcrumb-wrap">
    <div class="breadcrumb-content">
        <div class="container">
            @Html.Raw(Model.SiteMap)
        </div>
    </div>
</section>
<section class="banner-wrap">
    <div class="banner home-banner">
        <div class="item"><a class="banner-img" href="@Model.LinkBanner"><img src="@Model.PathBanner" alt=""></a></div>
    </div>
</section>
<section class="promotion-page s2">
    <div class="container">
        <h1 class="d-none">@Model.Name</h1>
        <div class="ht-title img text-center mb-3"><img src="@Model.PathImage" alt=""></div>
        <div class="home-content text-center" style="max-width: 530px">
            <div class="content">
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="page-cate">
            <ul id="list-cate">
            </ul>
        </div>
        <div class="place-list">
            <div class="row" id="place-list">
            </div>
        </div>
        <div class="pages">
            <ul id="pagination" class="pagination">
            </ul>
        </div>
    </div>
</section>

@section Scripts{ 
    <script src="~/page/promotion-master-card.js"></script>
}