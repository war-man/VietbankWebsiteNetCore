@model VietbankWebsite.ModelMap.CardProductDetailDto
@{
    Layout = "~/Views/Shared/_LayoutCard.cshtml";
}

<section class="breadcrumb-wrap">
    <div class="breadcrumb-content">
        <div class="container">
            @Html.Raw(Model.SiteMap)
        </div>
    </div>
    <div class="page-banner">
        <div class="banner-img"><img class="lazyload" data-src="@Model.Banner" src="@Model.Banner" alt=""></div>
    </div>
</section>
<section class="home-card">
    <div class="container">
        <div class="card-slick">
            @foreach (var item in Model.BoxTwo)
            {
                <div class="item">
                    <a class="card-item" href="@item.UrlTitle">
                        <figure>
                            <div class="card-img">
                                <img class="lazyload" data-src="@item.UrlImage" src="@item.UrlImage" alt="">
                            </div>
                            <figcaption>
                                <div class="card-logo">
                                    <img class="lazyload" data-src="~/Content/card/img/home/visa.png" src="~/Content/card/img/home/visa.png" alt="">
                                </div>
                                <div class="card-name">@item.Title</div>
                                <div class="card-des">@item.Description</div>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section class="product-page">
    <div class="product-detail">
        <div class="product-bg"><img class="lazyload" data-src="@Model.PathBackgroundBoxOne" src="@Model.PathBackgroundBoxOne" alt=""></div>
        <div class="container">
            <h2 class="product-cate home-des text-center">@Model.TitleOneBoxOne</h2>
            <h1 class="product-name home-title text-center">@Model.TitleTwoBoxOne </h1>
            <div class="product-img text-center"><img class="lazyload" data-src="@Model.PathCardBoxOne" src="@Model.PathCardBoxOne" alt=""></div>
        </div>
    </div>
    <div class="product-feature">
        @Html.Raw(Model.ContentBoxTwo)
    </div>
    <div class="product-limit">
        <div class="product-img"><img class="lazyload" data-src="@Model.PathBackgroundBoxThree" src="@Model.PathBackgroundBoxThree" alt=""></div>
        <div class="container">
            <div class="limit-content">
                <div class="product-title">@Model.TitleBoxThree</div>
                <div class="content">
                    <p>@Model.DescriptionBoxThree</p>
                </div>
                <div class="img"><img class="lazyload" data-src="~/Content/card/img/product/img3.png" src="~/Content/card/img/product/img3.png" alt=""></div>
            </div>
        </div>
    </div>
    <div class="product-promotion">
        <div class="container">
            <h2 class="product-title text-center">@Model.TitleBoxFour</h2>
            @Html.Raw(Model.ContentBoxFour)
        </div>
    </div>
</section>

