@model VietbankWebsite.ModelMap.Faqs
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}

<section class="banner-wrap">
    <section class="breadcrumb-wrap">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <ol class="breadcrumb mrt-10">
                        <li><a href="@Localizer["PersonalUrl"]">@Localizer["PersonalName"]</a></li>
                        <li><a href="@Localizer["SupportUrl"]">@Localizer["SupportName"]</a></li>
                        <li class="active"><span style="color:#999;">@Model.Title</span></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="banner-page imageBanner">
        <div style="background-image:url('@Model.Image')" class="imgBg"></div>
        <div class="desc">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-5 col-lg-5 col-xl-5">
                        <h1 class="title">@Model.Title</h1>
                        <div class="content">@Localizer["FaqsDes"]</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<main>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-lg-3">
                <partial name="~/Views/Partial/_ToolCalulationPersonalBar.cshtml" />
            </div>
            <div class="col-xs-12 col-lg-9">
                <section id="support-personal" class="hotro-ct">
                    <div class="tabs-support">
                        <ul role="tablist" class="nav-jt-sp">
                            @foreach (var item in Model.FaqsCategories)
                            {
                                @if (Model.FaqsCategories.First() == item)
                                {
                                    <li class="nav-item">
                                        <a href="#tab_@item.Id" data-toggle="tab" role="tab" class="active" aria-expanded="false">@item.Name</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a href="#tab_@item.Id" data-toggle="tab" role="tab" aria-expanded="false">@item.Name</a>
                                    </li>
                                }

                            }
                        </ul>
                    </div>
                    <div class="tab-content">
                        @foreach (var category in Model.FaqsCategories)
                        {
                            @if (Model.FaqsCategories.First() == category)
                            {
                                <div role="tabpanel" class="thetindung tab-pane active" id="tab_@category.Id" aria-expanded="false">
                                    @foreach (var item in category.FaqsItems)
                                    {
                                        <div class="panel-faqs">
                                            <div class="title"><span>@item.Question</span></div>
                                            <div class="content"><span><p>@Html.Raw(item.Answer)</p></span></div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div role="tabpanel" class="thetindung tab-pane" id="tab_@category.Id" aria-expanded="false">
                                    @foreach (var item in category.FaqsItems)
                                    {
                                        <div class="panel-faqs">
                                            <div class="title"><span>@item.Question</span></div>
                                            <div class="content"><span><p>@Html.Raw(item.Answer)</p></span></div>
                                        </div>
                                    }
                                </div>
                            }

                        }

                    </div>
                </section>

            </div>
        </div>
    </div>
</main>

