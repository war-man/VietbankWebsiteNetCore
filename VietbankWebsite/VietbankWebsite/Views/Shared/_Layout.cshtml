<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <environment include="Development">
        <link href="~/css/addons.css" rel="stylesheet" />
        <link href="~/css/main.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/addons.css" rel="stylesheet" />
        <link href="~/css/site.min.css" rel="stylesheet" />
        <script type="application/ld+json">
            {
            "@@context":
            "https://schema.org",
            "@@type": "Corporation",
            "url":
            "https://www.vietbank.com.vn/",
            "logo":
            "https://www.vietbank.com.vn/Content/user/image/logo.png",
            "contactPoint": [
            { "@@type": "ContactPoint",
            "telephone": "1800 1122",
            "contactType": "customer service"
            } ] }
        </script>
    </environment>

</head>
<body class="home">
    <div class="fullpage">
        <header>
            <partial name="~/Views/Partial/_TopHeader.cshtml" />
            <partial name="~/Views/Partial/_MainHeader.cshtml" />
        </header>
        <partial name="~/Views/Partial/_ToolLink.cshtml" />
        
        @RenderBody()
        
        <partial name="~/Views/Partial/_Footer.cshtml" />
    </div>

    <environment include="Development">
        <script src="~/js/jquery.3.1.1.min.js"></script>
        <script src="~/js/lazyload.js"></script>
        <script src="~/js/addons.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/common.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>


    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
