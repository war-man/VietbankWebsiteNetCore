<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Partial/_HeaderCard.cshtml" />
    @RenderSection("Styles", required: false)
</head>
<body class="home">
    <div class="fullpage">
        <header>
            <partial name="~/Views/Partial/_TopHeaderCard.cshtml" />
            <partial name="~/Views/Partial/_MainHeaderCard.cshtml" />
        </header>
        <partial name="~/Views/Partial/_ToolLink.cshtml" />

        @RenderBody()

        <partial name="~/Views/Partial/_Footer.cshtml" />
    </div>

    <environment include="Development">
        <script src="~/js/jquery.3.1.1.min.js"></script>
        <script src="~/js/lazyload.js"></script>
        <script src="~/card/js/core.js"></script>
        <script src="~/card/js/main.js"></script>
        <script src="~/js/common.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site-card.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
