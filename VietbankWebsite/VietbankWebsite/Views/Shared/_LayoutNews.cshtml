<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Partial/_Header.cshtml" />

</head>
<body class="tintuc">
    <div class="fullpage">
        <header>
            <partial name="~/Views/Partial/_TopHeader.cshtml" />
            <partial name="~/Views/Partial/_MainHeader.cshtml" />
        </header>
        <partial name="~/Views/Partial/_ToolLink.cshtml" />
        
        @RenderBody()
        
        <partial name="~/Views/Partial/_Footer.cshtml" />
    </div>

    <environment include="Development">
        <script src="~/js/jquery.3.1.1.min.js"></script>
        <script src="~/js/lazyload.js"></script>
        <script src="~/js/addons.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/common.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>


    </environment>
    <environment exclude="Development">
        <script src="~/js/site.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
